#!/bin/bash
clear

# vars
# bin_dir="$(dirname $(realpath $0))"
bin_dir="$(dirname $(readlink $0))"
filename=$1
last_line=""
cur_script=""
script_no=0
test_no=0
heading=""
heading_path=""
section_no=()
depth=0

# include functions from lib
source "$bin_dir/../src/lib.bash"

# init
if [ "$1" = "init"  ]
then
  source "$bin_dir/../src/init.bash"
fi

# check if initted
if [ ! -d bash_down ]
then
  echo 'this folder is not initted for bash_down. please run "bash_down init"'
  echo
  exit
fi

# recreate output files
rm -rf bash_down/build/scripts
mkdir bash_down/build/scripts
rm -rf bash_down/build/tests
mkdir bash_down/build/tests
rm bash_down/build/spec.md
touch bash_down/build/spec.md
rm bash_down/build/spec.txt
touch bash_down/build/spec.txt

# iterate through lines in file and decide how to parse/output them
IFS=''
while read -r line
do
  # commented single line
  if [ ! -z "$(echo $line | grep -e '^[ ]*##![^ /].*$')" ]
  then
    continue 

  # commented script
  elif [ ! -z "$(echo $line | grep -e '^[ ]*##![/]*.*$')" ]
  then
    cur_script="./bash_down/build/scripts/$script_no"_"$heading_path"
    commented_script="$heading_path"

  # run through parser if we have a local path after #!
  elif [ ! -z "$(echo $line | grep -e '^[ ]*#![^ /].*$')" ]
  then
    local_parser

  # inline script - #!/some/shell
  elif [ ! -z "$(echo $line | grep -e '^[ ]*#![/]*.*$')" ]
  then
    inline_script

  # execute and clear cur script if we get !#
  elif [ ! -z "$(echo $line | grep -e '^[ ]*!#$')" ]
  then
    inline_script_close

  # write to current script if we have one
  elif [ ! -z "$cur_script" ]
  then
    if [ -z "$commented_script" ]
    then
      echo $line >> "$cur_script"
    fi

  # heading
  elif [ ! -z "$(echo $line | grep -e '^#')" ]
  then
    heading
    last_line="$heading"
    
  # just write to markdown
  else
    echo $line >> bash_down/build/spec.md
    echo $line >> bash_down/build/spec.txt
    last_line="$line"
  fi

done < "bash_down/spec.bd"

# print the text spec
cat bash_down/build/spec.txt

# then execute the scripts
for file in bash_down/build/scripts/*
do
  if [ -s $file ]
  then
    "$file"
  fi
done

# then execute the runners
for path in bash_down/build/tests/*
do
  if [ -s $path ]
  then
  file=`basename "$path"`
    output=`"./bash_down/runners/$file" "./bash_down/build/tests/$file"`
    cat<<<"$output"
  fi
done
